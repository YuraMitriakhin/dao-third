<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>com.gmail.yuramitryahin.controller.IndexController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>drivers</servlet-name>
        <servlet-class>com.gmail.yuramitryahin.controller.DriversController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>drivers</servlet-name>
        <url-pattern>/drivers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registrationDrivers</servlet-name>
        <servlet-class>com.gmail.yuramitryahin.controller.RegistrationDriverController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>registrationDrivers</servlet-name>
        <url-pattern>/driver/registration</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>registrationDrivers</servlet-name>
        <url-pattern>/driver/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registrationManufacturer</servlet-name>
        <servlet-class>com.gmail.yuramitryahin.controller.RegistrationManufacturerController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>registrationManufacturer</servlet-name>
        <url-pattern>/manufacturer/add</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>registrationManufacturer</servlet-name>
        <url-pattern>/manufacturer/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registrationCar</servlet-name>
        <servlet-class>com.gmail.yuramitryahin.controller.CreateCarController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>registrationCar</servlet-name>
        <url-pattern>/car/add</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>registrationCar</servlet-name>
        <url-pattern>/car/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addDriverToCar</servlet-name>
        <servlet-class>com.gmail.yuramitryahin.controller.AddDriverToCarController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addDriverToCar</servlet-name>
        <url-pattern>/drivers/cars/add</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>addDriverToCar</servlet-name>
        <url-pattern>/driver/car/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.gmail.yuramitryahin.controller.LoginController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allCars</servlet-name>
        <servlet-class>com.gmail.yuramitryahin.controller.GetMyCurrentCarsController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>allCars</servlet-name>
        <url-pattern>/driver/cars</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>authenticationFilter</filter-name>
        <filter-class>com.gmail.yuramitryahin.web.filter.AuthenticationFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>authenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>
